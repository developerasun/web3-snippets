{
  "name": "web3-snippets",
  "version": "0.1.0",
  "description": "all you need to know as a web3 developer",
  "license": "Apache-2.0",
  "author": {
    "name": "Jake Sung",
    "email": "nellow1102@gmail.com"
  },
  "scripts": {
    "clean": "pnpm exec hardhat clean",
    "_compile": "pnpm exec hardhat compile",
    "compile": "run-s clean _compile",
    "test:mock": "nodemon -w test/mock --exec jest",
    "test:hook": "nodemon -w test/contracts --exec mocha -g \"hooks\" --slow 2000  --reporter list",
    "test:unit": "nodemon -w test/contracts --exec mocha -g \"unit\" --slow 2000  --reporter list",
    "test:integ": "nodemon -w test/contracts --exec mocha -g \"integ\" --slow 2000  --reporter list",
    "doc": "pnpm exec hardhat docgen",
    "format": "prettier --write --plugin=prettier-plugin-solidity \"**/*.{ts,sol,js,mjs,cjs}\"",
    "lint": "pnpm exec hardhat check",
    "log": "pnpm exec hardhat remove-logs",
    "size": "pnpm exec hardhat size-contracts",
    "gas": "pnpm exec hardhat test",
    "cov": "pnpm exec hardhat coverage",
    "networks": "pnpm exec hardhat verify --list-networks",
    "abi:type": "pnpm typechain --target ethers-v6 --out-dir assets/abi './assets/abi/MyToken.polygonMumbai.json'",
    "tx:mum": "pnpm exec hardhat run scripts/run.ts --network polygonMumbai",
    "tx:goe": "pnpm exec hardhat run scripts/run.ts --network optimisticGoerli",
    "dep:mum": "pnpm exec hardhat run scripts/deploy.ts --network polygonMumbai",
    "dep:goe": "pnpm exec hardhat run scripts/deploy.ts --network optimisticGoerli",
    "verify:mum": "node verify.cjs"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.5",
