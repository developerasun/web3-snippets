{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": false,
    "paths": {
      "@contracts/*": [
        "./contracts/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test/contracts",
    "./test/_default",
    "./assets/types",
  ],
  "files": [
    "./hardhat.config.ts",
    "./hardhat-env.d.ts"
  ]
}